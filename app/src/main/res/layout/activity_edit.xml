<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <TextView
        android:id="@+id/editaddresstitle"
        android:text="Please enter address title:"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/providedtitleedit"/>

    <TextView
        android:id="@+id/edititemurl"
        android:text="Please enter address description:"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/provideddescriptionedit"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/canceledit"
            android:layout_width="0dp"
            android:text="Cancel"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_weight="0.5"
            />

        <Button
            android:id="@+id/acceptedit"
            android:layout_width="0dp"
            android:text="Submit changes"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            />
    </LinearLayout>


</LinearLayout>